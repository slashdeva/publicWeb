doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    block css
      link(rel='stylesheet', href='/css/base.css')
    block js
      if ENV_DEVELOPMENT
        script(src='http://localhost:35729/livereload.js')
    block jquery
      script(src='/bower_components/jquery/dist/jquery.js')
      script(src='/bower_components/jquery/dist/jquery.min.js')
    block foundation
      link(rel='stylesheet', href='/bower_components/foundation/css/foundation.css')
      link(rel='stylesheet', href='/bower_components/foundation/css/foundation.min.css')
      link(rel='stylesheet', href='/bower_components/foundation/css/normalize.css')
      link(rel='stylesheet', href='/bower_components/foundation/css/normalize.min.css')
      script(src='/bower_components/foundation/js/foundation.js')
      script(src='/bower_components/foundation/js/foundation.min.js')
    block fastclick
      script(src='/bower_components/fastclick/lib/fastclick.js')
    block modernizr
      script(src='/bower_components/modernizr/modernizr.js')
    
  body
    block fullpage
    block header
    block content
    block footer
